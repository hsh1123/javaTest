<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.example.googleproject.Member.repository.memberRepository">
    <!--회원가입-->
    <insert id="regi">
        INSERT INTO MEMBER(id,name,password,email,phone,categori,price,place,file,auth) VALUES(#{id},#{name},#{password},#{email},#{phone},#{categori},#{price},#{place},#{file},#{auth})
    </insert>
    <!--id 유뮤 조회-->
    <select id="getId" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM MEMBER WHERE ID=#{id}
    </select>
    <!--login-->
    <select id="getLogin" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM MEMBER WHERE ID=#{id} AND PASSWORD=#{password}
    </select>
    <!--session-->
    <select id="getToken" resultType="java.lang.Integer">
        SELECT mno FROM MEMBER WHERE ID=#{id}
    </select>

    <select id="getMemberData" resultType="memberDto">
        SELECT * FROM MEMBER WHERE MNO=#{mno}
    </select>

